import java.util.*;

/* 
 * Lab 2 number of coins and their value in dollars
 */

public class Coins {
  public static final Scanner CONSOLE = new Scanner (System.in);
  
  // prints getCoins
  public static void getCoins() {
    // calls quarters
    quartersAmount();
    // calls dimes
    dimesAmount();
    // calls nickels
    nickelsAmount();
    // calls pennies
    penniesAmount();
    // calls number of coins
    // calls total value
  }
  
  // prints number and value of quarters
  public static void quartersAmount() {
  
    System.out.println("Enter the number of quarters: ");
    int quarters = CONSOLE.nextInt();
    double amount = quarters * 0.25;
    System.out.println(quarters + " quarters is $" + amount + ".");
  
  }
  
  // prints number and value of dimes
  public static void dimesAmount() {
    System.out.println("Enter the number of dimes: ");
    int dimes = CONSOLE.nextInt();
    double amount = dimes * 0.10;
    System.out.println(dimes + " dimes is $" + amount + ".");
    
  }
  
  // prints number of value of nickels
  public static void nickelsAmount() {
    System.out.println("Enter the number of nickels: ");
    int nickels = CONSOLE.nextInt();
    double amount = nickels * 0.05;
    System.out.println(nickels + " nickels is $" + amount + ".");
    
  }
  
  // prints number and value of pennies
  public static void penniesAmount() {
    System.out.println("Enter the number of pennies: ");
    int pennies = CONSOLE.nextInt();
    double amount = pennies * 0.01;
    System.out.println(pennies + " pennies is $" + amount + ".");
    
  }
  
  // prints getCents
  public static void getCents() {
    System.out.println("Enter the amount of cents: ");
    int cents = CONSOLE.nextInt();
    int amount = cents / 25;
    System.out.println(cents + "c is " + amount + " quarters.");
  }
  
  public static void main(String [] args) {
    
    // prints author of program
    System.out.println("Lab 2 written by Christian Wilson");
    
    // call getCoins
    getCoins();
    
    // call getCents
    getCents();
    
  }
}